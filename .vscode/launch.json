    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome Debugger",
        "url": "http://localhost:4200",
        "webRoot": "${workspaceFolder}",
        "presentation": {
          "hidden": true
        }
      },
      {
        "command": "nx serve --project audiowall",
        "name": "Debug Audiowall",
        "cwd": "${workspaceFolder}",
        "request": "launch",
        "type": "node-terminal",
        "serverReadyAction": {
          "action": "startDebugging",
          "name": "Launch Chrome Debugger",
          "pattern": "listening on localhost:4200"
        }
      }
    ]
}
